            </Grid.RowDefinitions>

            <!--selected friend textblock ersetzen-->
            <StackPanel x:Name="selectedFriend" Grid.Column="0" Grid.Row="0"  
                        VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Online" VerticalAlignment="Top" Margin="20,0,0,0"/>
            <!--<StackPanel></StackPanel>-->

            <Border  BorderThickness="10" Grid.Column="1" Grid.RowSpan="2">
                <Button Content="Remove" Click="AddFriend" Height="50"/>
            </Border>
            <Border BorderThickness="10" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Button Content="Stats" Click="ShowStats" Height="50"/>
            </Border>
            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" BorderThickness="10" >
                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4">

                    <TextBox x:Name="ShowInputBlock" FontSize="22" Background="white" IsReadOnly="True"/>
                </ScrollViewer>

            </Border>


            <Border Grid.Column="2" Grid.Row="3" BorderThickness="0,10,10,10">
                <Button Width="40" Content="Send" Click="SendBtn" />
            </Border>
            <Border Grid.Column="3" Grid.Row="3" BorderThickness="0,10,10,10">
                <Button Width="40" Content="Call"/>
            </Border>

